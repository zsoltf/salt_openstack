# macros

{% macro create_database(service, user, password) -%}

openstack-{{ service }}-db:

  mysql_database.present:
    - name: {{ service }}

  mysql_user.present:
    - name: {{ user }}
    - password: {{ password }}
    - host: '%'

  mysql_grants.present:
    - user: {{ user }}
    - grant: all privileges
    - database: {{ service }}.*
    - host: '%'
    - require:
        - mysql_database: openstack-{{ service }}-db
        - mysql_user: openstack-{{ service}}-db

{%- endmacro %}
